
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <nav class="top-nav">
            <ul class="top-nav">
                <li class="active"><a href="#hello" class="scroll">Ana Sayfa</a></li>
                <li class="page-scroll"><a href="#over" class="scroll">Hakkında</a></li>
                <li class="page-scroll"><a href="#share" class="scroll">Biz Kimiz?</a></li>
                <li class="page-scroll"><a href="#fea" class="scroll">İletişim</a></li>
                <li class="page-scroll">@Html.ActionLink("Merhaba " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Profil" })</li>
                <li class="page-scroll"><a href="javascript:document.getElementById('logoutForm').submit()">Çıkış Yap</a></li>
            </ul>
            <a href="#" id="pull"><img src="~/Tema/Ana/images/nav-icon.png" title="menu" /></a>
        </nav>
    }
}
else
{
    <nav class="top-nav">
        <ul class="top-nav">
            <li class="active"><a href="#hello" class="scroll">Ana Sayfa</a></li>
            <li class="page-scroll"><a href="#over" class="scroll">Hakkında</a></li>
            <li class="page-scroll"><a href="#share" class="scroll">Biz Kimiz?</a></li>
            <li class="page-scroll"><a href="#fea" class="scroll">İletişim</a></li>
            <li class="page-scroll"><a href="@Url.Action("Register","Account")" class="scroll">Kayıt Ol</a></li>
            <li class="contatct-active" class="page-scroll"><a href="@Url.Action("Login","Account")" class="scroll">Giriş Yap </a></li>
            <li class="page-scroll"><a href="#comp" class="scroll">Compatibility</a></li>
        </ul>
        <a href="#" id="pull"><img src="~/Tema/Ana/images/nav-icon.png" title="menu" /></a>
    </nav>
}
